<%- include('./partials/header.ejs'); %>
    <%- include('./partials/tabs.ejs'); %>

    <div id="main">
        <% if (user) { %>
            <form method="POST" action="/post/create">
                <div id="newPost">
                    <textarea id="message" type="text" rows="3" placeholder="What's on your mind" name="post" value="" required></textarea>
                    <button type="submit" id="postButton">Post</button>
                </div>
            </form>
        <% } %>

        <ul id="posts">
            <% if (posts) { %>
                <% for (let post of posts){ %>
                    <li>
                        <div id="postHeader">
                            <p id="name"><%= post.user.fullName %></p>
                            <p id="usernameDisplay">@<%= post.user.username %></p>
                            <p id="time"><span><%= post.timeStamp %></span></p>
                        </div>
                        <p id="post">
                            <%= post.post %>
                        </p>
                    </li>
                <% } %>
            <% } %>
        </ul>
    </div>

<%- include('./partials/footer.ejs'); %>