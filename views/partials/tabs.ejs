<div id="header">
    <h1 id="title">Andre's Club</h1>
    <div id="links">
        <ul>
            <% if (user) {%>
                <li>
                    Welcome <%= user.firstName %> <%= user.lastName %>
                </li>
                <li>
                    <a href="/user/logout">Sign out</a>
                </li>
            <% } else { %>
                <li id="signUp">
                    <a href="/user/create">Sign up</a>
                </li>
                <li id="login">
                    <a href="/user/login">Login</a>
                </li>
            <% } %>
        </ul>
        <ul>
            <% if (user) {%>
                <li id="becomeMember">
                    <a href="/user/:id/membership/update">Become a member</a>
                </li>
                <li id="becomeAdmin">
                    <a href="/user/:id/admin/update">Become an admin</a>
                </li>
            <% } %>
        </ul>
    </div>
</div>