</head>

<body>
    <div id="header">
        <h1 id="title">Andre's Club</h1>
        <div id="links">
            <ul>
                <li id="signUp">
                    <a href="/user/create">Sign up</a>
                </li>
                <li id="login">
                    <a href="/user/login">Login</a>
                </li>
            </ul>
            <ul>
                <li id="becomeMember">
                    <a href="/user/:id/membership/update">Become a member</a>
                </li>
                <li id="becomeAdmin">
                    <a href="/user/:id/admin/update">Become an admin</a>
                </li>
            </ul>
        </div>
    </div>

    <div id="signUpForm">
        <h2 id="pageTitle">Sign up</h2>
        <p> <%= error %> </p>
        <form method="POST" action=''>
            <div class="form" id="signUp">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" placeholder="Alfred" name="firstName" required value="">
                <label for="firstName">Last Name</label>
                <input type="text" id="lastName" placeholder="Smith" name="lastName" required value="">
                <label for="username">Username</label>
                <input type="text" id="username" placeholder="alfredsmith" name="username" required value="">
                <label for="password">Password</label>
                <input type="password" id="password" placeholder="********" name="password" required value="">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" placeholder="********" name="confirmPassword" value="">
                <button type="submit">Sign up</button>
            </div>
        </form>
    </div>

    <script src="main.js"></script>
</body>

</html>